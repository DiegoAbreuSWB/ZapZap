<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zap.zapzap.zapzap.Activity.Validador">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        android:background="@color/back"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="200dp"
            android:layout_height="163dp"
            android:layout_marginLeft="65dp"
            android:layout_marginStart="65dp"
            app:srcCompat="@drawable/logo"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="VALIDACAO"
            android:textColor="@color/textColorPrimary"
            android:textSize="30sp"
            android:layout_below="@+id/imageView2"
            android:layout_alignRight="@+id/imageView2"
            android:layout_alignEnd="@+id/imageView2"
            android:layout_marginRight="17dp"
            android:layout_marginEnd="17dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voce recebeu um codigo SMS para a validacao. Digite esse codigo no espaco abaixo:"
            android:textColor="@color/textColorPrimary"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/txt_codigo_validar_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:ems="10"
            android:hint="DIGITE O CODIGO"
            android:inputType="textPersonName"
            android:textColor="@color/textColorPrimary" />

        <Button
            android:id="@+id/btn_verificar_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txt_codigo_validar_id"
            android:layout_marginTop="39dp"
            android:hint="VERIFICAR" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
